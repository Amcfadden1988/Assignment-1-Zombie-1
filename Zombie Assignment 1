using System;

namespace Zombie_1.cs
{
    class Program
    {
        static void Main(string[] args)
         {

            int value = 2;

            if(value == 1)
            {
                Console.WriteLine ( "Status: Alive");
            }
            else if (value == 2)

                Console.WriteLine ( "Status: Zombie");

            else if (value == 3)
            {
                Console.WriteLine ( "Status: Dead");
            }
            else if (value ==4)
            {
                Console.WriteLine ( "Status: Unknown");
            }
            switch (value)
            {
                case 1:
                    Console.WriteLine("Status: Alive");
                    break;
                case 2:
                    Console.WriteLine("Status: Zombie");
                    break;
                case 3:
                    Console.WriteLine ("Status: Dead");
                    break;
                case 4:
                    Console.WriteLine("Status: Unknown");
                    break;
            }
        }
    }
}
